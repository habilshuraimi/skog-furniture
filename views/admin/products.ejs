        <section class="content-main">
            <h4>Products List</h4>    
            <div class="mb-4 d-flex justify-content-end ">
                <a href="/admin/addProduct" class="btn btn-dark " id="addNew">+ Add product </a>
            </div>
            <div class="row">   
                           
                <div>
                    <table class="table table-hover">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Images</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Discount Price</th>
                            <th>Stock</th>
                            <th>Status</th> 
                            <th>Actions</th>
                        </tr>
                        
                        <% if(product.length > 0) {
                            for(let i=0; i<product.length; i++) { %>
                                <tr>
                                    <td><%= product[i].name %></td>
                                    <td><%= product[i].description %></td>
                                    <td>
                                        <% product[i].images.forEach(images => { %>
                                            <img src="/productImages/<%= images %>" alt="" height="60px" width="60px">
                                        <% }) %>
                                    </td>
                                    <td><%= product[i].category.name %></td>
                                    <td><%= product[i].price %></td>
                                    <td><%= product[i].discountPrice %></td>
                                    <td><%= product[i].stock %></td>
                                    <td><%= product[i].is_deleted ? 'Inactive' : 'Active' %></td> 
                                    <td>
                                        <!-- Toggle button to change status -->
                                        <a href="/admin/active?id=<%= product[i]._id %>&action=<%= product[i].is_deleted ? 'Inactive' : 'Active' %>" class="btn btn-dark">
                                            <%= product[i].is_deleted ? 'Unarchive' : 'Archive' %>
                                        </a>
                                        <br><br>
                                        <a href="/admin/editproduct?id=<%= product[i]._id %>" class="btn btn-dark">Edit</a>
                                    </td>
                                </tr>
                            <% }
                        } else { %>
                            <tr>
                                <td colspan="9">Product Not Found</td>
                            </tr>
                        <% } %>
                    </table>
                    
                </div>                       
                </div>
                

            </div>
