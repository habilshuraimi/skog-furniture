        <div class="login-register-area pt-64 pb-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-8">
                        <div class="login-register-wrap register-wrap p-2"
                            style="background-color: rgba(249, 249, 247, 0.963);">
                            <h3> <i class="fa fa-user-o "></i> Email Verification</h3>
                            <div class="login-register-form">
                                <form action="/otp" method="post">
                                    
                                    <div class="sin-login-register">
                                        <label>Email address <span>*</span></label>
                                        <div>
                                            <p class="message" style="text-align: center; color: red;">
                                                <% if (typeof error !== "undefined" && typeof error !== null ) { %>
                                                    <%= error %>
                                                <% } %>
                                                </p>
                                            
                                    </div>
                                        <div id="emailError" class="errorMessage" style="color: red;"></div>
                                        <input type="email" name="email" required>
                                    </div>
                                    
                                    

                                    <div class="login-register-btn">
                                        <button type="submit"  onclick="return validatePassword()">Send OTP</button> 
                                    </div>
                                    <div>
                                        <a href="/auth/google" class="btn btn-google btn-lg">
                                            <i class="fab fa-google"></i> Sign in with Google
                                          </a>
                                    </div>
                                </form>
                                <br>
                                <a href="/login">Already registerd?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            
        
            // Validation for email
            const emailInput = document.querySelector('input[name="email"]');
            const emailError = document.getElementById('emailError');
        
            emailInput.addEventListener('input', function () {
                // Regular expression for email validation
                const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailPattern.test(emailInput.value)) {
                    emailError.textContent = 'Invalid email address';
                } else {
                    emailError.textContent = '';
                }
            });
        
            
        </script>
        

