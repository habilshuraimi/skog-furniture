        <div class="login-register-area pt-64 pb-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-8">
                        <div class="login-register-wrap register-wrap p-2"
                            style="background-color: rgba(249, 249, 247, 0.963);">
                            <h3> <i class="fa fa-user-o "></i> change password</h3>
                            <div class="login-register-form">
                                <form action="/changePass" method="post">
                                   
                                    <div class="sin-login-register">
                                        <label>Password <span>*</span></label>
                                        <div id="PasswordError" class="errorMessage" style="color: red;"></div>
                                        <input type="password" name="password" required>
                                    </div>
                                    <div class="sin-login-register">
                                        <label>confirm Password <span>*</span></label>
                                        <div id="confirmError" class="errorMessage" style="color: red;"></div>
                                        <input type="password" name="confirmPassword" required>
                                    </div>

                                    <div class="login-register-btn">
                                        <button type="submit"  onclick="return validatePassword()">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // Validation for name
            const nameInput = document.querySelector('input[name="name"]');
            const nameError = document.getElementById('nameError');
        
            nameInput.addEventListener('input', function () {
                if (!/^[a-zA-Z\s]+$/.test(nameInput.value)) {
                    nameError.textContent = 'Name should only contain letters';
                } else {
                    nameError.textContent = '';
                }
            });
        
            
        
            // Validation for mobile number
            const numberInput = document.querySelector('input[name="number"]');
            const numberError = document.getElementById('numberError');
        
            numberInput.addEventListener('input', function () {
                // Regular expression for mobile number validation
                const numberPattern = /^[0-9]{10}$/;
                if (!numberPattern.test(numberInput.value)) {
                    numberError.textContent = 'Mobile number should be 10 digits';
                } else {
                    numberError.textContent = '';
                }
            });
        
            // Validation for password
    const passwordInput = document.querySelector('input[name="password"]');
    const passwordError = document.getElementById('PasswordError');

    passwordInput.addEventListener('input', function () {
        // Check if password length is less than 6 characters
        if (passwordInput.value.length < 6) {
            passwordError.textContent = 'Password should be at least 6 characters ';
        } else {
            passwordError.textContent = '';
        }
    });

    // Validation for confirm password
    const password = document.querySelector('input[name="password"]');
    const confirmPassword = document.querySelector('input[name="confirmPassword"]');
    const passwordMatchError = document.getElementById('confirmError');

    const validatePassword = () => {
        if (password.value !== confirmPassword.value) {
            passwordMatchError.textContent = "Password doesn't match";
            return false;
        } else {
            passwordMatchError.textContent = " ";
            return true;
        }
    }
        </script>
        

